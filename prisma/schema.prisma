// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String?
  role     String?
  posts    Post[]
  products Product[]
}

model Country {
  id             Int             @id @default(autoincrement())
  countryName    String          @unique
  slug           String?
  products       Product[]
  finishProducts FinishProduct[]
}

model National {
  id             Int             @id @default(autoincrement())
  nationalName   String          @unique
  slug           String?
  products       Product[]
  finishProducts FinishProduct[]
}

model Product {
  id           Int        @id @default(autoincrement())
  title        String
  description  String?
  content      String?
  slug         String?
  slugOriginal String?
  image        String?
  published    Boolean    @default(false)
  data         String?
  author       User       @relation(fields: [authorId], references: [id])
  authorId     Int
  country      Country[]
  national     National[]
  createdAt    DateTime   @default(now())
}

model FinishProduct {
  id           Int        @id @default(autoincrement())
  title        String
  description  String?
  content      String?
  slug         String?
  slugOriginal String?
  image        String?
  published    Boolean    @default(false)
  data         String?
  authorId     Int
  country      Country[]
  national     National[]
  createdAt    DateTime   @default(now())
}

model Post {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?
  content      String?
  slug         String?
  slugOriginal String?
  image        String?
  published    Boolean   @default(false)
  author       User      @relation(fields: [authorId], references: [id])
  authorId     Int
  createdAt    DateTime  @default(now())
  comments     Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  fullName  String
  content   String
  createdAt DateTime @default(now())
  Post      Post?    @relation(fields: [postId], references: [id])
  postId    Int?
}
