// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String?
  role     String?
  posts    Post[]
}

model Country {
  id          Int     @id @default(autoincrement())
  countryName String  @unique
  slug        String?
}

model National {
  id           Int     @id @default(autoincrement())
  nationalName String  @unique
  slug         String?
}

model Product {
  id            Int             @id @default(autoincrement())
  title         String
  description   String?
  content       String?
  slug          String?
  slugOriginal  String?
  image         String?
  country       String?
  national      String?
  published     Boolean         @default(false)
  data          String?
  createdAt     DateTime        @default(now())
  FinishProduct FinishProduct[]
}

model FinishProduct {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  content      String?
  slug         String?
  slugOriginal String?
  image        String?
  published    Boolean  @default(false)
  data         String?
  product      Product  @relation(fields: [productId], references: [id])
  productId    Int
  createdAt    DateTime @default(now())
}

model Post {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?
  content      String?
  slug         String?
  slugOriginal String?
  image        String?
  published    Boolean   @default(false)
  author       User      @relation(fields: [authorId], references: [id])
  authorId     Int
  createdAt    DateTime  @default(now())
  comments     Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  fullName  String
  content   String
  createdAt DateTime @default(now())
  Post      Post?    @relation(fields: [postId], references: [id])
  postId    Int?
}
